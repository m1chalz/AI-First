{
  "name": "petspot-e2e-tests",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end tests for PetSpot (Web + Mobile)",
  "scripts": {
    "test:web": "playwright test",
    "test:web:ui": "playwright test --ui",
    "appium:start": "ANDROID_HOME=$HOME/Library/Android/sdk npx appium --address localhost --port 4723",
    "test:mobile:android": "export ANDROID_HOME=$HOME/Library/Android/sdk && PLATFORM=android wdio run wdio.conf.ts",
    "test:mobile:ios": "PLATFORM=ios wdio run wdio.conf.ts",
    "clean:appium": "lsof -ti :4723 | xargs kill -9 2>/dev/null || echo 'Port 4723 is already free'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.19.25",
    "@wdio/appium-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/globals": "^8.0.0",
    "@wdio/junit-reporter": "^9.20.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "appium": "^3.1.1",
    "appium-uiautomator2-driver": "^6.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "webdriverio": "^8.0.0"
  },
  "dependencies": {
    "appium-xcuitest-driver": "^10.8.1"
  }
}
