{
  "name": "PetSpot",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "webApp",
    "shared/build/dist/js/developmentLibrary"
  ],
  "scripts": {
    "build": "cd webApp && npm run build",
    "start": "cd webApp && npm run start",
    "test:e2e:web": "npx playwright test",
    "test:e2e:web:ui": "npx playwright test --ui",
    "test:mobile:android": "wdio run wdio.conf.ts",
    "test:mobile:ios": "wdio run wdio.conf.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "@wdio/appium-service": "^8.0.0",
    "@wdio/cli": "^8.0.0",
    "@wdio/local-runner": "^8.0.0",
    "@wdio/mocha-framework": "^8.0.0",
    "@wdio/spec-reporter": "^8.0.0",
    "appium": "^2.0.0",
    "typescript": "^5.0.0",
    "webdriverio": "^8.0.0"
  }
}